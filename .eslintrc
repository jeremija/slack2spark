{
    // "parser": "babel-eslint",
    "extends": ["standard"],
    "rules": {
        "indent": ["error", 2, { "MemberExpression": 0, "SwitchCase": 1, "flatTernaryExpressions": true }],
        "max-len": [2, 80, 4],
        "jsx-quotes": ["error", "prefer-double"],
        "padded-blocks": 0,
        "import/first": 0,
        "no-return-assign": 0
    },
    "globals": {
        "expect": true,
        "jest": true,
        "jasmine": true,
        "it": true,
        "beforeEach": true,
        "afterEach": true,
        "beforeAll": true,
        "afterAll": true,
        "describe": true
    }
}
